{
  "compilerOptions": {
    "target": "es6",
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "@/*": [
        "*"
      ]
    },
    "allowJs": true,
    "resolveJsonModule": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "declaration": true,
    "outDir": "./lib"
  },
  "include": [
    "./src/components/*",
    "./src/helpers/*",
    "./src/hooks/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
